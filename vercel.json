{
  "version": 2,
  "name": "athens",
  "build": {
    "env": {
      "NODE_VERSION": "20",
      "ATHENS_BUILD_MODE": "auto",
      "JAVA_TOOL_OPTIONS": "-Xmx2g"
    }
  },
  "buildCommand": "yarn vercel:build:enhanced",
  "outputDirectory": "vercel-static",
  "installCommand": "yarn vercel:install:enhanced",
  "framework": null,
  "public": false,
  "rewrites": [
    {
      "source": "/athens/(.*)",
      "destination": "/athens/$1"
    },
    {
      "source": "/clerk/(.*)", 
      "destination": "/clerk/$1"
    },
    {
      "source": "/",
      "destination": "/athens/index.html"
    }
  ],
  "headers": [
    {
      "source": "/athens/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        },
        {
          "key": "X-Athens-Build",
          "value": "vercel-enhanced"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000"
        }
      ]
    }
  ]
}